<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageButton
        android:id="@+id/image_x"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:scaleType="fitCenter"
        android:src="@drawable/button_x"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="20dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_width="0dp"
        android:layout_height="30dp"
        android:progress="20"
        android:progressTint="#8BC34A"
        android:progressBackgroundTint="#EEEEEE"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@id/image_x"
        app:layout_constraintStart_toEndOf="@id/image_x"
        tools:layout_editor_absoluteY="26dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn bản dịch đúng"
        android:textColor="@android:color/black"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="24dp"
        tools:layout_editor_absoluteY="139dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tôi đọc những cuốn sách."
        android:textColor="@android:color/black"
        android:textSize="15sp"
        android:textStyle="normal"
        tools:layout_editor_absoluteX="26dp"
        tools:layout_editor_absoluteY="189dp" />

    <Button
        android:id="@+id/button_a1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:text="I read dogs."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="130dp"
        app:layout_constraintTop_toBottomOf="@id/textView3"
        android:textAllCaps="false"
        android:textSize="14sp"
        tools:layout_editor_absoluteY="278dp" />

    <Button
        android:id="@+id/button_a2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I read the cats."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_a1"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="371dp" />

    <Button
        android:id="@+id/button_a3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="I read books."
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textAllCaps="false"
        android:textSize="14sp"
        android:background="@android:color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_a2"
        android:layout_marginTop="15dp"
        tools:layout_editor_absoluteY="476dp" />

    <Button
        android:id="@+id/button_kt"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="kiểm tra"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.551"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="15dp"
        tools:layout_editor_absoluteY="667dp" />


</androidx.constraintlayout.widget.ConstraintLayout>